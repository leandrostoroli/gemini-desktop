{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gemini-desktop",
  "version": "0.1.0",
  "identifier": "com.shiueo.gemini-desktop",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "https://gemini.google.com",
    "beforeBuildCommand": "",
    "frontendDist": "https://gemini.google.com"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Gemini",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "nsis", "msi", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
